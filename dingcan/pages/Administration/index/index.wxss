.box {
    margin: 25rpx 24rpx 0;
    padding: 0rpx 20rpx 0;
    /* height: 980rpx; */
    background: #FFFFFF;
    border-radius: 20rpx;
    position: relative;
    z-index: 999;
    overflow: hidden;
}

.box .title {
    font-size: 32rpx;
    font-family: NotoSansHans;
    font-weight: bold;
    color: #333333;
    line-height: 1;
    padding-left: 16rpx;
    border-left: 6rpx solid #3377FF;
    margin: 35rpx 0;
}

.box .title2 {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 35rpx 0 26rpx;
}

.box .title2 .v2 {
    font-size: 28rpx;
    color: #666666;
}

.box .title2 image {
    width: 50rpx;
    height: 50rpx !important;
    object-fit: contain !important;
}

.box .shiduan {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 35rpx;
}

.box .shiduan .tit {
    color: #666;
    font-size: 28rpx;
}

.box .shiduan .mealTime {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.repast-box .mealTime {
    justify-content: space-around;
}

.box .shiduan .mealTime label {
    display: flex;
    align-items: center;
    padding: 0 20rpx;
}

.box .shiduanx .mealTime label .select {
    margin-right: 10rpx;
}

.box .shiduan .mealTime label .info {
    font-size: 28rpx;
